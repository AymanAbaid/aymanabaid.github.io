<div class="posters">
  {% if site.posters != blank %}
    {% assign posters_size = site.posters | size %}
    <div
      class="table-responsive"
      {% if include.limit and page.posters.scrollable and posters_size > 3 %}
        style="max-height: 60vw"
      {% endif %}
    >
      <table class="table table-sm table-borderless">
        {% assign posters = site.posters | sort: "date" | reverse %}
        {% if include.limit and page.posters.limit %}
          {% assign posters_limit = page.posters.limit %}
        {% else %}
          {% assign posters_limit = posters_size %}
        {% endif %}
        {% for item in posters limit: posters_limit %}
          <tr>
            <th scope="row" style="width: 20%">{{ item.date | date: '%b %d, %Y' }}</th>
            <td>
              {% if item.inline %}
                {{ item.content | remove: '<p>' | remove: '</p>' | emojify }}
              {% else %}
                <a class="posters-title" href="{{ item.url | relative_url }}">{{ item.title }}</a>
              {% endif %}
            </td>
          </tr>
        {% endfor %}
      </table>
    </div>
  {% else %}
    <p>No posters so far...</p>
  {% endif %}
</div>
